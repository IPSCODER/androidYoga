<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/maind"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#FF8C00"
        android:gravity="center"
        android:text="Asthama"
        android:textColor="#FFFACD"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maind"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:text="Hii pravin,"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="This Is Your BMI = "
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resultbmi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BMI"
        android:layout_alignBottom="@+id/BMI"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/BMI"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/yson"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="285dp"
        android:background="@drawable/round"
        android:text="YogAason"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ymudra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ydiet"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="287dp"
        android:background="@drawable/round"
        android:text="YogMudra"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ydiet"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/round"
        android:text="Diet"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/yhr"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="68dp"
        android:layout_marginBottom="139dp"
        android:background="@drawable/round"
        android:text="Home Remedies"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BMI"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Obese"
        android:textColor="#FF0000"
        android:textSize="30sp" />

</RelativeLayout>